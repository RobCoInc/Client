<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="suplex.theblacklist.user.UserMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_main_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holder"/>

        <TextView
            android:id="@+id/user_main_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holder"/>

        <TextView
            android:id="@+id/user_main_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holder"/>

        <TextView
            android:id="@+id/user_main_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="holder"/>

        <Button
            android:id="@+id/my_shifts_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_shifts_button_text"/>

        <Button
            android:id="@+id/my_arrests_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_arrests_button_text"/>

    </LinearLayout>

</LinearLayout>
